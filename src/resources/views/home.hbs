<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
        {{!-- Tren giao dien nho de col-sm-6 (Tuc la 2 item tren mot dong) --}}
        {{!-- Tren giao dien lon de col-lg-4 (Tuc la 3 item tren mot dong) --}}
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khoa hoc</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>